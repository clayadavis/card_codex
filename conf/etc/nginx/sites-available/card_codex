server {
    if ($host = www.cardcodex.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = cardcodex.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    listen [::]:80;
    server_name cardcodex.com www.cardcodex.com;
    return 301 https://$server_name$request_uri;




}
 
server {
    listen 443 ssl;
    listen [::]:443 ssl;
 
    server_name cardcodex.com www.cardcodex.com;
    
    include snippets/ssl-params.conf;
    ssl_certificate /etc/letsencrypt/live/cardcodex.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/cardcodex.com/privkey.pem; # managed by Certbot

    root /srv/card_codex/webapp/;

    gzip_proxied any;

    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        root /srv/card_codex/webapp/;
    }

    location / {
        proxy_pass_header Server;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Scheme $scheme;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_connect_timeout 10;
        proxy_read_timeout 10;
        # Use socket for systemd
        proxy_pass http://unix:/run/card_codex/socket;
        # proxy_pass http://localhost:8000/;
    }


}
